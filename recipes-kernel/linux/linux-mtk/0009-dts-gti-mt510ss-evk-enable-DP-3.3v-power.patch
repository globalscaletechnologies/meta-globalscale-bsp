From 6abf1c87fb37be0b48116ad7fe71416bb273e559 Mon Sep 17 00:00:00 2001
From: Jason Hung <jhung@globalscaletechnologies.com>
Date: Wed, 18 Sep 2024 08:31:55 +0800
Subject: [PATCH 1/5] dts: gti-mt510ss-evk: enable DP 3.3v power

---
 .../boot/dts/mediatek/gti-mt510ss-evk.dts     | 19 +++++++++++++++++++
 1 file changed, 19 insertions(+)

diff --git a/arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts b/arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts
index 28dc64a5c399..c62d87cd98c9 100644
--- a/arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts
+++ b/arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts
@@ -196,6 +196,18 @@ vmch_ext: vmch-ext {
 		gpio = <&pio 4 GPIO_ACTIVE_HIGH>;
 	};
 
+	dp_3v3_power: dp-3v3-power {
+		pinctrl-names = "default";
+		pinctrl-0 = <&dp_3v3_power_en_pin>;
+		compatible = "regulator-fixed";
+		regulator-name = "dp_3v3_power";
+		regulator-min-microvolt = <3300000>;
+		regulator-max-microvolt = <3300000>;
+		gpio = <&pio 14 GPIO_ACTIVE_HIGH>;
+		enable-active-high;
+		regulator-always-on;
+	};
+
 	amic_codec: amic-codec {
 		#sound-dai-cells = <0>;
 		compatible = "dmic-codec";
@@ -466,6 +478,13 @@ pins-cmd-dat {
 		};
 	};
 
+	dp_3v3_power_en_pin: dp-3v3-power-en-pin {
+		pins1 {
+			pinmux = <PINMUX_GPIO14__FUNC_B_GPIO14>;
+			output-high;
+		};
+	};
+
 	eth_default_pins: eth-default-pins {
 		pins-txd {
 			pinmux = <PINMUX_GPIO131__FUNC_O_GBE_TXD3>,
