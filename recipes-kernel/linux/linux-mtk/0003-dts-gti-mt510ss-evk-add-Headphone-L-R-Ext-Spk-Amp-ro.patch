From 878adbf3f22bbe2f3a2a7dd45ccb461493547a09 Mon Sep 17 00:00:00 2001
From: Jason Hung <jhung@globalscaletechnologies.com>
Date: Tue, 13 Aug 2024 16:30:24 +0800
Subject: [PATCH] dts: gti-mt510ss-evk: add Headphone L/R Ext Spk Amp routing

add Headphone L/R Ext Spk Amp routing
---
 arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts | 3 +++
 1 file changed, 3 insertions(+)

diff --git a/arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts b/arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts
index b5c27718a7dd..f3fdfe3b4039 100644
--- a/arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts
+++ b/arch/arm64/boot/dts/mediatek/gti-mt510ss-evk.dts
@@ -1114,6 +1114,7 @@ &keypad {
 &mt6359codec {
 	mediatek,mic-type-0 = <1>; /* ACC */
 	mediatek,mic-type-1 = <3>; /* DCC */
+    ext-amp-enable = <&pio 13 GPIO_ACTIVE_HIGH>;
 };
 
 &mt6359_vbbck_ldo_reg {
@@ -1438,6 +1439,8 @@ &sound {
 	audio-routing =
 		"Headphone", "Headphone L",
 		"Headphone", "Headphone R",
+		"Headphone", "Headphone L Ext Spk Amp",
+		"Headphone", "Headphone R Ext Spk Amp",
 		"AIN1", "Headset Mic",
 		"DMIC_INPUT", "AP DMIC",
 		"AP DMIC", "AUDGLB",
